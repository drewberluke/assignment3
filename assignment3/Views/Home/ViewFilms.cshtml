@page
@{
    ViewBag.Title = "Favorite Films";
}

@model IEnumerable<assignment3.Models.Films>

<div class="text-center">
    <h1>Joel's Favorite Films!</h1>

    <table>
        <thead>
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (assignment3.Models.Films x in Model)
            {
                <tr>
                    <td>@x.category</td>
                    <td>@x.title</td>
                    <td>@x.year</td>
                    <td>@x.director</td>
                    <td>@x.rating</td>
                    <td>@x.edited</td>
                    <td>@x.lent</td>
                    <td>@x.notes</td>
                </tr>
            }
        </tbody>
    </table>
</div>
